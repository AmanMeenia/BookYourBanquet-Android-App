<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_sky">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/BlueMoon"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/grandabanquet"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WELCOME TO THE
  THE GRAND BANQUET "
                android:fontFamily="bold"
                android:textSize="30dp"
                android:gravity="center"
                android:textColor="@color/darkblue"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="     Sector C Extension, Sainik Colony,Near Jamkash Vehicleeads Body Shop,
Sujwan, Chowadi Road, Jammu 180015,
J and K India
Email: info@thegrandjammu.com
General Manager: 099063 41199
Banquet Enquiry: 099063 51199
"
                android:fontFamily="bold"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="@color/darkblue"/>
            <Button
                android:id="@+id/thegrandButton"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="bold"
                android:textColor="@color/Red"
                android:background="@color/colorPrimary"
                android:text="For more details click here "/>
            <Button
                android:id="@+id/thegrandButtonPay"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="bold"
                android:layout_marginTop="20dp"
                android:textColor="@color/Red"
                android:background="@color/colorPrimary"
                android:text="Book Now"
                android:layout_marginBottom="20dp"/>



        </LinearLayout>
    </RelativeLayout>

</ScrollView>

