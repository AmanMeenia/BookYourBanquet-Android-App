<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.miet.eventsandbeyonds.user.BookBanquetNow"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/login_image2"
        android:alpha=".2"/>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="420dp"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            app:cardBackgroundColor="#a099f584"
            android:id="@+id/cardView2">
   <Button
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:id="@+id/BookBanquetDateButton"
     android:layout_marginTop="70dp"
     android:layout_marginLeft="20dp"
     android:layout_marginRight="30dp"
     android:text="ENTER THE DATE "
     android:textSize="15dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/BookBanquetDate"
        android:hint="Date Of Booking(dd-mm-yy)"
        android:inputType="date"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="120dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/BookBanquetTimeButton"
                android:layout_marginTop="160dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:text="ENTER THE time "
                android:textSize="15dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/BookBanquetTime"
        android:hint="Timing Of Event( hh:mm AM/PM )"
        android:inputType="text"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="200dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/BookBanquetCater"
        android:hint="Caterer Required(Yes or No)"
        android:inputType="text"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="250dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/BookBanquetPayment"
        android:hint="Advance Payment(In Digit eg:- 10000)"
        android:inputType="phone"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="300dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/BookBanquetMobile"
        android:hint="Mobile Number"
        android:inputType="phone"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="340dp"/>
        </android.support.v7.widget.CardView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/BookBanquetBtn"
        android:layout_marginTop="460dp"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="120dp"
        android:hint="Book Banquet"
        android:textSize="17dp"
        />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/cardView2"
        android:prompt="@string/BookYourBanquetSpinner"/>


</RelativeLayout>
