<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:elevation="8dp"
    android:focusable="true"
    android:clickable="true"
    android:layout_margin="4dp"
    android:orientation="vertical"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/user_request_list_linearlayout"
        android:paddingTop="12dp"
        android:gravity="center_vertical"
        android:paddingBottom="12dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:padding="12dp"
            android:id="@+id/user_request_IV"
            android:src="@drawable/ic_account_grey600_24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Name"
            android:paddingLeft="8dp"
            android:textSize="16sp"
            android:layout_toRightOf="@id/user_request_IV"
            android:layout_alignTop="@id/user_request_IV"
            android:id="@+id/user_request_name_TV"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="12sp"
            android:paddingLeft="8dp"
            android:layout_below="@id/user_request_name_TV"
            android:layout_alignLeft="@id/user_request_name_TV"
            android:id="@+id/user_request_email_TV"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/validate_user_request_LL"
            android:layout_marginRight="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_tick"
                android:id="@+id/validate_user_request_IV"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha=".2"
        android:background="@color/colorPrimary"/>
</LinearLayout>


