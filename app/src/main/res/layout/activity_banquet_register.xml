<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_sky">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/banquet_reg"
            android:scaleType="center"
            android:alpha=".5"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register A Banquet"
                android:textSize="30sp"
                android:textStyle="italic"
                android:layout_marginTop="30dp"
                android:textColor="#a73e3a3b"
                android:layout_marginBottom="30dp"
                android:layout_gravity="center"
                android:gravity="center"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                map:cardCornerRadius="15dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                map:cardBackgroundColor="#a099f584"
                android:layout_marginTop="40dp">
                <EditText
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:textColorHint="#585555"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:id="@+id/emailBanquet"
                    android:textColor="@color/Red"
                    android:inputType="text"
                    android:hint="Email"/>
                <EditText
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:textColorHint="#585555"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:id="@+id/passwordBanquet"
                    android:textColor="@color/Red"
                    android:inputType="text"
                    android:hint="Password"/>
                <EditText
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="130dp"
                    android:textColorHint="#585555"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:id="@+id/nameBanquet"
                    android:textColor="@color/Red"
                    android:inputType="text"
                    android:hint="Hall Name"/>
                <EditText
                    android:layout_width="250dp"
                    android:inputType="time"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="180dp"
                    android:textColorHint="#585555"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/Red"
                    android:id="@+id/openingHrsBanquet"
                    android:hint="Opening Hours"/>
                <EditText
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="230dp"
                    android:textColorHint="#585555"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:id="@+id/phoneBanquet"
                    android:textColor="@color/Red"
                    android:inputType="phone"
                    android:hint="Phone"/>
                <EditText
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="280dp"
                    android:textColorHint="#585555"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:id="@+id/addressBanquet"
                    android:textColor="@color/Red"
                    android:inputType="text"
                    android:hint="Address"/>
                <EditText
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="330dp"
                    android:textColorHint="#585555"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:id="@+id/priceBanquet"
                    android:textColor="@color/Red"
                    android:inputType="number"
                    android:hint="Price"/>

            </android.support.v7.widget.CardView>

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="400dp"
                map:cameraZoom="12"/>
            <Button
                android:id="@+id/registerBtnBanquet"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="REgister"
                android:textColor="#ffffff"
                android:layout_width="150dp"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>

